<StyleBase xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StyleBase.XamlResources>
        <StringSelector x:Key="DAUtilityRadioBackground"
                        Normal="*DemoRes*/images/FH3/9. Controller/controller_btn_radio_off.png"
                        Selected ="*DemoRes*/images/FH3/9. Controller/controller_btn_radio_on.png"
                        Disabled ="*DemoRes*/images/FH3/9. Controller/controller_btn_radio_off.png"
                        DisabledSelected ="*DemoRes*/images/FH3/9. Controller/controller_btn_radio_on.png"
                        />
        <FloatSelector x:Key="DAUtilityRadioOpacity"
                       Normal="1.0"
                       Selected="1.0"
                       Disabled="0.4"
                       DisabledSelected="0.4"
                        />
    </StyleBase.XamlResources>

    <SelectButtonAttributes x:Name="SelectButtonAttributes">
        <SelectButtonAttributes.CheckImageAttributes>
            <ImageAttributes  Size2D="48, 48"
                              ParentOrigin="TopLeft" PivotPoint="TopLeft" PositionUsesPivotPoint="true"
                              ResourceURL ="{StaticResource DAUtilityRadioBackground}"
                              Opacity="{StaticResource DAUtilityRadioOpacity}"/>
        </SelectButtonAttributes.CheckImageAttributes>
    </SelectButtonAttributes>
</StyleBase>