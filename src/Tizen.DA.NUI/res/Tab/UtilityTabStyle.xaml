<AttributesContainer xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <AttributesContainer.XamlResources>
        <ColorSelector x:Key="UtilityTextColor"
                       Normal="#ff000000"
                       Selected="#ff0ea1e6"/>
    </AttributesContainer.XamlResources>
    <TabAttributes x:Name="TabAttributes" 
                   ParentOrigin="TopLeft" 
                   PivotPoint="TopLeft"
                   PositionUsesPivotPoint="true" 
                   Space="56, 56, 1, 0"
                   BackgroundColor="1.0, 1.0, 1.0, 0.5">
        <TabAttributes.UnderLineAttributes>
            <ViewAttributes ParentOrigin="BottomLeft"
                            PivotPoint="BottomLeft"
                            PositionUsesPivotPoint="true"
                            BackgroundColor="#ff0ea1e6"
                            Size2D="1, 3"/>
        </TabAttributes.UnderLineAttributes>
        <TabAttributes.TextAttributes>
            <TextAttributes PointSize="25"
                            TextColor="{StaticResource UtilityTextColor}"/>
        </TabAttributes.TextAttributes>
    </TabAttributes>
</AttributesContainer>