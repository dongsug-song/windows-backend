<XamlLayout xmlns="http://tizen.org/Tizen.NUI/2018/XAML"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Size2D = "26, 26">
    <XamlLayout.XamlResources>
        <ResourceDictionary>
            <Style x:Key="StateInfo" TargetType="ImageView">
                <Style.Triggers>
                    <Trigger TargetType="ImageView" Property="State" Value="Normal">
                        <Trigger.Setters >
                            <Setter TargetType="ImageView" Property="ResourceUrl" Value="*DemoRes*/images/FH3/9. Controller/pagination_ic_nor.png" />
                        </Trigger.Setters>
                    </Trigger>
                    <Trigger TargetType="ImageView" Property="State" Value="Selected">
                        <Trigger.Setters >
                            <Setter TargetType="ImageView" Property="ResourceUrl" Value="*DemoRes*/images/FH3/9. Controller/pagination_ic_sel.png" />
                        </Trigger.Setters>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </XamlLayout.XamlResources>
    <ImageView x:Name ="indicator" Name="indicator"  WidthResizePolicy="FillToParent" HeightResizePolicy="FillToParent" Style = "{StaticResource StateInfo}"/>
</XamlLayout>