<StyleBase xmlns="http://tizen.org/Tizen.NUI/2018/XAML"  
                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <StyleBase.XamlResources>

        <StringSelector x:Key="DAOverlayImage"
                    Normal =""
                    Pressed ="*DemoRes*/images/FH3/3. Button/rectangle_btn_press_overlay.png"
                    Selected=""/>
        <ColorSelector x:Key="DABasicButtonFont" 
                       Normal="#ff000000"
                       Pressed="0, 0, 0, 0.7"
                       Selected="#ff0ea1e6"
                       Disabled="0, 0, 0, 0.4"
                       />
        
    </StyleBase.XamlResources>

    <ButtonAttributes x:Name="ButtonAttributes" IsSelectable="true">

        <ButtonAttributes.BackgroundImageAttributes>
            <ImageAttributes 
                ResourceURL="*DemoRes*/images/FH3/3. Button/rectangle_btn_normal.png" 
                Border="5, 5, 5, 5" 
                />
        </ButtonAttributes.BackgroundImageAttributes>

        <ButtonAttributes.ShadowImageAttributes>
            <ImageAttributes 
                ResourceURL="*DemoRes*/images/FH3/3. Button/rectangle_btn_shadow.png" 
                Border="5, 5, 5, 5" 
                />
        </ButtonAttributes.ShadowImageAttributes>

        <ButtonAttributes.OverlayImageAttributes>
            <ImageAttributes 
                ResourceURL="{StaticResource DAOverlayImage}" 
                Border="5, 5, 5, 5"
                />
        </ButtonAttributes.OverlayImageAttributes>

        <ButtonAttributes.TextAttributes>
            <TextAttributes 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                WidthResizePolicy="FillToParent" 
                HeightResizePolicy="FillToParent"
                PointSize="20"
                TextColor="{StaticResource DABasicButtonFont}"/>
        </ButtonAttributes.TextAttributes>
    </ButtonAttributes>
</StyleBase>
