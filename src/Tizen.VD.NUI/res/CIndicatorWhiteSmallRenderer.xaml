<XamlLayout xmlns="http://tizen.org/Tizen.NUI/2018/XAML"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Size2D = "9, 9">
    <XamlLayout.XamlResources>
        <ResourceDictionary>
            <Style x:Key="StateInfo" TargetType="ImageView">
                <Style.Triggers>
                    <Trigger TargetType="ImageView" Property="State" Value="Normal">
                        <Trigger.Setters >
                            <Setter TargetType="ImageView" Property="ResourceUrl" Value="/usr/share/resources/image/component/c_pagination/c_paganation_small_dot_normal.png" />
                        </Trigger.Setters>
                    </Trigger>
                    <Trigger TargetType="ImageView" Property="State" Value="Selected">
                        <Trigger.Setters >
                            <Setter TargetType="ImageView" Property="ResourceUrl" Value="/usr/share/resources/image/component/c_pagination/c_paganation_small_dot_focus.png" />
                        </Trigger.Setters>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </XamlLayout.XamlResources>
    <ImageView x:Name ="indicator" WidthResizePolicy="FillToParent" HeightResizePolicy="FillToParent" Style = "{StaticResource StateInfo}"/>
</XamlLayout>