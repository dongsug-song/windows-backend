<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="Tizen.NUI.Examples.AnimationWithXamlDemoPage"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <ContentPage.TransitionInfos>
	<x:Array Type="{x:Type TransitionInfo}">
      <TransitionInfo TriggerTargetName="Click" TargetType="Tizen.NUI.UIComponents.PushButton" TriggerEventName="Clicked" />
    </x:Array>
  </ContentPage.TransitionInfos>
  
  <ContentPage.TransitionNames>
    <x:Array Type="{x:Type x:String}">
      <x:String>OpacityAndPositionAnimation</x:String>
      <x:String>OrientationAnimation</x:String>
    </x:Array>
  </ContentPage.TransitionNames>
  
 
  <TextLabel x:Name="label" Name ="label" Text="AnimationTest" Position2D="100,500" Size2D="300,50"/>
  
  <TextLabel x:Name="orientation" Text="orientationAnimation" Position2D="100,320" Size2D="400,50" />
    
  <PushButton x:Name="Click" RightFocusableView="{x:Reference orientationCheck}" LabelText="Click" Size2D="400,80" Position2D="100,200" />
  
  <PushButton x:Name="orientationCheck" LeftFocusableView="{x:Reference Click}" LabelText="orientationCheck" Size2D="400,80" Position2D="600,200" />
  
</ContentPage>