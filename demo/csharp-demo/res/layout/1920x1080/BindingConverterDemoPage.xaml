<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="Tizen.NUI.Examples.BindingConverterDemoPage"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:l="clr-namespace:Tizen.NUI.Examples;"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" >

  <ContentPage.Resources>
    <ResourceDictionary>
      <l:IntToBoolConverter x:Key="intToBool" />
    </ResourceDictionary>
  </ContentPage.Resources>

  <TextLabel x:Name="label" Name ="label" Text="Text" Position2D="10,100" Size2D="300,50"
             HorizontalAlignment="Center" VerticalAlignment="Center" PivotPoint="Center" />

  <PushButton x:Name="Button" Name="Button" LabelText="Button"  Size2D="200,80"  Position2D="200,200"
              Focusable="{Binding Source={x:Reference label}, Path=LineCount, Converter={StaticResource intToBool}}"/>

</ContentPage>
