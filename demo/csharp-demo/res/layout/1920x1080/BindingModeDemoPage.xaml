<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="Tizen.NUI.Examples.BindingModeDemoPage"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <TextLabel x:Name="label" Name ="label" Text="Text" Position2D="10,100" Size2D="300,50" 
             HorizontalAlignment="Center" VerticalAlignment="Center" PivotPoint="Center" />
  
  <Slider x:Name="scaleSlider" Name="scaleSlider" BindingContext="{x:Reference label}" LowerBound="0"
        UpperBound="30" ShowPopup="true" ShowValue="true" Value="{Binding ScaleX, Mode=TwoWay}"
        ValuePrecision="1" Position2D="400,300" Size2D="300,20" />
  
  <Slider x:Name="positionXSlider" Name="positionXSlider" BindingContext="{x:Reference label}" LowerBound="10"
        UpperBound="30" ShowPopup="true" ShowValue="false" Value="{Binding PositionX, Mode=OneWayToSource}"
        ValuePrecision="5" Position2D="400,400" Size2D="300,20" />
  
  <Slider x:Name="positionYSlider" Name="positionYSlider" BindingContext="{x:Reference label}" LowerBound="100"
        UpperBound="200" ShowPopup="true" ShowValue="false" Value="{Binding PositionY, Mode=OneWayToSource}"
        ValuePrecision="5" Position2D="400,500" Size2D="300,20" />
  
</ContentPage>
