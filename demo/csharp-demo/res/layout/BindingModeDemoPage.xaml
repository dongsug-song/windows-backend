<ContentPage x:Class="Tizen.NUI.Examples.BindingModeDemoPage"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <TextLabel x:Name="label" Name ="label" Text="Text" BindingContext="{x:Reference scaleSlider}" Position2D="10,100" Size2D="300,50" 
             HorizontalAlignment="Center" VerticalAlignment="Center" PivotPoint="Center" ScaleX="{Binding Value}"/>
  
  <Slider x:Name="scaleSlider" Name="scaleSlider" LowerBound="0"
        UpperBound="30" ShowPopup="true" ShowValue="true"
        ValuePrecision="1" Position2D="400,300" Size2D="300,20" />

  <PushButton Name="Click" LabelText="Click" Size2D="400,80" Position2D="1000,100"/>
  
</ContentPage>
